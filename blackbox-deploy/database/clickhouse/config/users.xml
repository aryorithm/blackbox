<clickhouse>
    <users>
        <!-- The default user -->
        <default>
            <password></password> <!-- Empty password for MVP, secure this in prod -->
            <networks>
                <ip>::/0</ip> <!-- Allow connection from anywhere (Docker network) -->
            </networks>
            <profile>default</profile>
            <quota>default</quota>

            <!-- Allow management -->
            <access_management>1</access_management>
        </default>
    </users>

    <!-- Tuning profiles -->
    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage> <!-- 10GB Limit -->
            <load_balancing>random</load_balancing>
        </default>
        <readonly>
            <readonly>1</readonly>
        </readonly>
    </profiles>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>